<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/noti_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_launcher" />



    <TextView
        android:id="@+id/noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/noti_image"
        android:layout_toEndOf="@+id/noti_image"
        android:layout_marginTop="5dp"
        android:text="标题"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noti_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti_title"
        android:layout_alignLeft="@+id/noti_title"
        android:layout_alignStart="@+id/noti_title"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="内容1"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/noti_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti_content1"
        android:layout_alignLeft="@+id/noti_title"
        android:layout_alignStart="@+id/noti_title"
        android:layout_marginTop="2dp"
        android:textColor="#000000"
        android:text="内容2"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="时间"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/noti_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti_time"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/noti_time"
        android:layout_alignEnd="@+id/noti_time"
        android:text="清除" />



</RelativeLayout>
